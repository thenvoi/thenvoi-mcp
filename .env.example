# Required: Your Thenvoi API key
THENVOI_API_KEY=your_api_key_here

# Optional: Thenvoi API base URL (defaults to https://app.thenvoi.com)
THENVOI_BASE_URL=https://app.thenvoi.com

# Transport: stdio (default) or sse
MCP_TRANSPORT=stdio

# SSE server settings (only used when MCP_TRANSPORT=sse)
MCP_HOST=127.0.0.1
MCP_PORT=8000